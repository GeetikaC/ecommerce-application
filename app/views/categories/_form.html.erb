<%= form_for @category do |c| %>

	<% if @category.errors.any? %>
		<h3>Category couldn't be saved because:</h3>
		<ul>
		<% @category.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	<% end %>

	<label for="category_name">Name: </label> <br/>
	<%= c.text_field :name, placeholder: "Enter Category Name" %> <br/>

	<%= c.submit %>

<% end %>