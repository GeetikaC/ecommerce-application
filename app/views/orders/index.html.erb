<h2>All orders</h2>
<% if @orders.empty? %>
	<p>No orders found.</p>
<% else %>
	<ol>
		<% @orders.each do |order| %>
		<li>
		<h3>Order Details</h3>
			order_number:<%= order.order_number %><br/>
			order_date:<%= order.order_date %><br/>
			address:<br/>
			<%= order.address.name %><br/>
			<%= order.address.pincode %><br/>
			<%= order.address.street %><br/>
			<%= order.address.landmark %><br/>
			<%= order.address.city %><br/>
			total:<%= order.total %><br/>
			Delivered?:<%= order.is_delivered %>
		<p>Products in this order</p>
			<% order.order_line_items.each do |order_line_item| %>
					Product:<br/>
					Name: <%= order_line_item.product.name %><br/>
					Price: <%= order_line_item.price %><br/>
					Description: <%= order_line_item.product.description %><br/>
					Quantity: <%= order_line_item.quantity %><br/>
			<% end %>
		</li>
		<% end %>
	</ol>
<% end %>
